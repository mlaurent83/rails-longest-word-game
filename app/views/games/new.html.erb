<h1>New game</h1>
<ul>
  <% @letters.each do |letter| %>
    <li><%= letter %></li>
  <% end %>
</ul>

<h3>What is the longest word you can find?</h3>
<%= form_with url: "/score", method: :post, data: { turbo: "false" } do |form| %>
  <%= form.text_field :word %>

  <%# Include the grid as a hidden field to pass it as a parameter %>
  <% @letters.each do |letter| %>
    <%= form.hidden_field :grid, multiple: true, value: letter %>
  <% end %>

  <%= form.submit 'Submit' %>
<% end %>
